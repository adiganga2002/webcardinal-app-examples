{
  "workDir": ".",
  "dependencies": [
    {
      "name": "components/core",
      "src": "https://github.com/webcardinal/webcardinal-essentials",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/cardinal",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./dev/cardinal/components/core && npm install"
        }
      ]
    }
  ],
  "build-cardinal-components": [
    {
      "name": "build-cardinal-components",
      "src": "./dev/cardinal/components",
      "actions": [
        {
          "type": "buildCardinalComponents",
          "target": "./cardinal/components"
        }
      ]
    }
  ]
}
